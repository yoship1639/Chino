<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rabbithouse.chino.HomeActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView_userCount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="16dp"
        android:text="情報を受け取るお店のカテゴリ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkBox_category_fasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_userCount_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:text="ファッション"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_fasion"
        android:layout_below="@+id/checkBox_category_fasion"
        android:layout_marginTop="16dp"
        android:text="ホビー"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_hobby"
        android:layout_below="@+id/checkBox_category_hobby"
        android:layout_marginTop="16dp"
        android:text="レストラン"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_grocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_restaurant"
        android:layout_below="@+id/checkBox_category_restaurant"
        android:layout_marginTop="16dp"
        android:text="食料品"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_dailyNecessities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_grocery"
        android:layout_below="@+id/checkBox_category_grocery"
        android:layout_marginTop="16dp"
        android:text="日用雑貨"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_interior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_dailyNecessities"
        android:layout_below="@+id/checkBox_category_dailyNecessities"
        android:layout_marginTop="16dp"
        android:text="家具・インテリア"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_interior"
        android:layout_below="@+id/checkBox_category_interior"
        android:layout_marginTop="16dp"
        android:text="サービス"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox_category_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox_category_service"
        android:layout_below="@+id/checkBox_category_service"
        android:layout_marginTop="16dp"
        android:text="その他"
        android:textSize="24sp" />

</RelativeLayout>
